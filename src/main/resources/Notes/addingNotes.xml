<template name="addingNotes" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="access_token" description="The token to access the backend services"/>
    <parameter name="notes" description="Json object of notes"/>

    <sequence>
        <property name="uri.var.access_token" expression="$func:access_token"/>
        <property name="uri.var.notes" expression="$func:notes"/>


        <header name="Content-Type" value="application/x-www-form-urlencoded" scope="transport"/>
        <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2"/>


        <payloadFactory>
            <format>
                <xform>
                    <access_token>$1</access_token>
                    <notes>$2</notes>
                </xform>
            </format>
            <args>
                <arg expression="$func:access_token"/>
                <arg expression="$func:notes"/>
            </args>
        </payloadFactory>

        <call>
            <endpoint>
                <http method="post"
                      uri-template="http://api.toodledo.com/3/notes/add.php"/>
            </endpoint>
        </call>
    </sequence>
</template>