<template name="deletingRows" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="access_token" />
    <parameter name="rows"  />
    <sequence>
        <property name="uri.var.access_token" expression="$func:access_token" />
        <property name="uri.var.rows" expression="$func:rows" />

        <header name="Content-Type" value="application/x-www-form-urlencoded" scope="transport"/>
        <property name="messageType" value="application/x-www-form-urlencoded" scope="axis2" />

        <payloadFactory>
            <format>
                <xform>
                    <access_token>$1</access_token>
                    <rows>$2</rows>
                </xform>
            </format>
            <args>
                <arg expression="$func:access_token" />
                <arg expression="$func:rows" />
            </args>
        </payloadFactory>
        <call>
            <endpoint>
                <http method="post"
                      uri-template="http://api.toodledo.com/3/rows/delete.php" />
            </endpoint>
        </call>
    </sequence>
</template>
